%div#content
  -# widget grid -->
  %section#widget-grid
    -# row -->
    %div.row
      -# NEW WIDGET START -->
      %article.col-xs-12.col-sm-12.col-md-12.col-lg-12
        %div.jarviswidget.jarviswidget-color-blueDark{ "data-widget-editbutton" => "true", "data-widget-deletebutton" => "false", "data-widget-togglebutton" => "false", "data-widget-fullscreenbutton" => "false", "data-widget-colorbutton" => "false" }
          %header
            %span.widget-icon
              %i.fa.fa-table
            %h2.widget-header Item List
          -#- widget div-->
          %div
            -# widget edit box -->
            %div.jarviswidget-editbox
              -# This area used as dropdown edit box -->
            -#- end widget edit box -->
            -#- widget content -->
            %div.widget-body
              %div.widget-body-toolbar
                = link_to new_item_path, class: "btn btn-success", remote: true do 
                  %i.fa.fa-plus
                  %span New Item
              %table#items-table.table.table-striped.table-bordered.table-hover{ :width => "100%", 'data-source' => "#{items_path(format: "json")}" }
                %thead
                  %tr
                    %th Id
                    %th Name
                    %th Commodity
                    %th Size
                    %th Variety
                    %th Grade
                %tbody
 


