
%fieldset

  %tr
    %td
      = f.object.payer.name
    %td
      = f.object.payee.name
    %td
      - invoice_number = f.object.invoice_number.blank? ? "blank" : f.object.invoice_number
      = link_to invoice_number, edit_invoice_path(f.object), remote: true
    %td
      %strong
        = number_to_currency(f.object.invoice_line_items.first.amount_dollars)
    %td.col-md-2
      = f.hidden_field :_destroy
      %a.btn.btn-danger.pull-right.remove_fields{"href" => "#"}
        %i.fa.fa-remove
          Delete    