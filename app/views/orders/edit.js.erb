var getSearchArgs = function(grade, size, variety) {

  var search = [];

  if(grade !== ""){
    search.push("(?=.*\\b" + grade + "\\b)");
  }

  if(variety !== ""){
    search.push("(?=.*\\b" + variety + "\\b)");
  }

  if(size !== ""){
    search.push("(?=.*\\b" + size + "\\b)");
  }

  searchArg = (search.length==1)?search:search.join("");

  return searchArg;
};


