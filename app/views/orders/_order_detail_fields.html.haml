%fieldset
  %table.table
    %thead
    %tbody
      %tr
        %td
          = f.select :item_id, options_for_select(Item.all.map { |item| [item.name, item.id]}, selected: f.object.item_id), hide_label: true
        %td
          = f.text_field :price_cents,  hide_label: true
        %td
          = f.text_field :size_indicator_id,  hide_label: true
        %td
          = f.hidden_field :_destroy
          %a.btn.btn-danger.pull-right.remove_fields{"href" => "#"}
            %i.fa.fa-remove
              Delete