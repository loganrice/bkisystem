                      %input.form-control{ :type => "text", :placeholder => "Buyer" }
                    %th.hasinput{ :style => "width:13%" }
                      %input.form-control{ :type => "text", :placeholder => "Total lbs" }
                    %th.hasinput{ :style => "width:13%" }
                      %input.form-control{ :type => "text", :placeholder => "Total Sale" }

