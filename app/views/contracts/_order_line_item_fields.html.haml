%fieldset
  %table.table.order_detail_table
    %thead
    %tbody
      %tr
        %td.col-md-4
          = f.select :item_id, options_for_select(@contract.quote.quote_line_items.all.map { |item| [Item.find(item.item_id).name, item.item_id]}, selected: f.object.item_id)
        %td.col-md-2
          = f.text_field :price_dollars, prepend: "$", value: number_to_currency(f.object.price_dollars || 0.00)
        %td.col-md-2
          = f.text_field :weight_grams
        %td.col-md-2
          = f.hidden_field :_destroy
        %td.col-md-2
          = select_tag :weight_id, options_for_select(Weight.all.map { |unit| [ unit.weight_unit_of_measure, unit.id] }, f.object.weight_id), hide_label: true
        %td.col-md-2
          %a.btn.btn-danger.pull-right.remove_fields{"href" => "#"}
            %i.fa.fa-remove
              Delete

