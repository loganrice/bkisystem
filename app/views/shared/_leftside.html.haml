          %li.nav-item
            %a{ :href => "#" } Sales Summary Report
          %li.nav-item
            %a{ :href => "#" } Contract Status Report
          %li.nav-item
            %a{ :href => "#" } Grower Pay Report
          %li.nav-item
            %a{ :href => "#" } Pay Report
          %li.nav-item
            %a{ :href => "#" }
              Shipping Report
              %span.badge.pull-right.inbox-badge.bg-color-yellow new

      %li.nav-item
        %a{ :href => "#" }
          %i.fa.fa-lg.fa-fw.fa-pencil-square-o
          %span.menu-item-parent Item Master
        %ul
          -#%li.nav-item
            -#= link_to 'New Contract', new_contract_path, remote: true
          %li.nav-item
            = link_to 'Items', items_path, remote: true
