%div#content
  -# widget grid -->
  %section#widget-grid
    -# row -->
    %div.row
      -# NEW WIDGET START -->
      %article.col-xs-12.col-sm-12.col-md-12.col-lg-12
        -#- end widget -->
        -#- Widget ID (each widget will need unique ID)-->
        %div.jarviswidget.jarviswidget-color-blueDark#itemindex{ "data-widget-editbutton" => "false" }
          -# widget options:
          -#usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">
          -#data-widget-colorbutton="false"
          -#data-widget-editbutton="false"
          -#data-widget-togglebutton="false"
          -#data-widget-deletebutton="false"
          -#data-widget-fullscreenbutton="false"
          -#data-widget-custombutton="false"
          -#data-widget-collapsed="true"
          -#data-widget-sortable="false"
          %header
            %span.widget-icon
              %i.fa.fa-table
            %h2= @account.name
          -#- widget div-->
          %div
            -# widget edit box -->
            %div.jarviswidget-editbox
              -# This area used as dropdown edit box -->
            -#- end widget edit box -->
            -#- widget content -->
            %div.widget-body
              = bootstrap_form_for(@account, layout: :horizontal, label_errors: true, remote: true) do |f|
                = f.text_field :name, icon: "user"
                = f.phone_field :phone1, icon: "phone-alt"
                = f.telephone_field :phone2, icon: "phone-alt"
                = f.telephone_field :fax
                = f.text_field :first_name, layout: :default
                = f.text_field :last_name, layout: :inline
                = f.email_field :email, icon: "envelope"
                = f.text_field :address_1_line_1, control_col: "col-sm-6"
                = f.text_field :address_1_line_2
                = f.text_field :address_1_line_3
                = f.text_field :address_1_city
                = f.text_field :address_1_state
                = f.text_field :address_1_zip
                = f.text_field :address_1_country
            
                = f.submit @account.new_record? ? "Create new account" : "Update account"

